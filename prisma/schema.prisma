generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  username    String    @unique
  email       String    @unique
  password    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Category {
  id           String    @id @default(uuid())
  CategoryName         String
  products     Product[]
}

model Brand {
  id           String    @id @default(uuid())
  brandName         String
  products     Product[]
}

model Product {
  id            String    @id @default(uuid())
  Model         String
  description   String
  price         Float
  salePrice     Float
  stockQuantity Int
  categoryId    String
  brandId       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  category      Category  @relation(fields: [categoryId], references: [id])
  brand         Brand     @relation(fields: [brandId], references: [id])
}
